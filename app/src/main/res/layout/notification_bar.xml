<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="82dp">

    <ImageView
        android:id="@+id/iv_taobao"
        android:layout_width="90dp"
        android:layout_height="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        android:src="@mipmap/tao_logo" />

    <ImageView
        android:id="@+id/iv_main_page"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iv_taobao"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:scaleType="fitXY"
        android:src="@mipmap/main_page" />


    <ImageView
        android:id="@+id/iv_main_crazy"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iv_taobao"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/iv_main_page"
        android:scaleType="fitCenter"
        android:src="@mipmap/main_crazy" />

    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:src="@mipmap/tao_set" />

</RelativeLayout>
